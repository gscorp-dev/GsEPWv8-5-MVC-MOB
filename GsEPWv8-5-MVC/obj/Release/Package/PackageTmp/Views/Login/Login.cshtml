@model  GsEPWv8_5_MVC.Model.LoginModel
@{
    Layout = null;
}
<style>
    .ErrorBorder {
        border: red solid 1px !important;
    }
</style>
<!DOCTYPE html>
<html>
<head>
    @*<meta name="viewport" content="width=device-width", initial-scale="1.0" />*@
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Gs3PLv8 | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="../bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="../plugins/iCheck/square/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page" style="background:url('../Images/GenSara.jpg');">

    <div class="box-header" style="background:url('../Images/GenSara.jpg');">
     
        <div class="col-xs-12">
            <div class="container">
                <table>
                    <tr>
                        <td>
                            <label style="width:700px; color:#0d8cb5; display:inline-block;font-size:20px;font-weight:bold;">WELCOME TO EDS - 3PL </label>
                            <br />
                            <br />
                            <br />
                            <label style="color:Green;font-size:15px;">@Html.DisplayFor(model => model.Showday)</label>
                        </td>
                        <td>
                            <label style="width:700px; color:#0d8cb5; display:inline-block;font-size:40px;font-weight:bold;">@Html.DisplayFor(model => model.CompanyAppName) </label>
                        </td>
                        <td>
                            @*<a href="http://www.saramax.com/"><img src="../Images/saramax_logo.JPG" width="250" height="60"></a>*@
                        </td>
                        <td style="text-align:right; margin-right:0px;">
                            <img src="../Images/gslogo.png" style="height:56px; width: 200px;">
                            <a href="http://www.gensoftcorp.com" style="display:inline-block;width:100%; margin-right:384px;"><b>Powered By Gensoft Corp</b></a>
                        </td>
                    </tr>
                </table>
            </div>         
        </div>     
    </div>
    <div class="box-body" style="border-bottom-color:red;">
        <h6 style="border-bottom:1px solid #ff3700;"><label></label></h6>
        <div class="login-box" style="border:1px solid black;">
            <!-- /.login-logo -->
            <div class="login-box-body">
                <center><h4 class="box-title" style="color:darkorchid;"><b>UNDIES-eComm</b></h4></center>
                <h6 style="border-bottom:3px solid blue;"><label></label></h6>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                    <div style="text-align:center;color:red">@ViewBag.ErrorMessage</div><br />
                    <fieldset>
                        <p class="login-box-msg">Sign in to start your session</p>
                        <div class="form-group has-feedback">
                            @*<input type="email" class="form-control" placeholder="Email">*@
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "User Name", @maxlength = "50", @style = "Background:#eae7e7" })
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                            <span style="color:red" id="Emailmsg"></span>

                        </div>
                        <div class="form-group has-feedback">
                            @*<input type="password" class="form-control" placeholder="Password">*@
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Password", @maxlength = "10", @type = "password", @style = "Background:#eae7e7" })
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                            <span style="color:red" id="Pwdmsg"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-8">
                                <div class="checkbox icheck">
                                    <label>
                                        <input name="remember" type="checkbox" value="checked" @ViewBag.chkchecked> Remember Me
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-xs-4">
                                @*<button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>*@
                                <button type="submit" class="btn btn-primary btn-block btn-flat" onclick="return LoginAuthenticate();">Sign In</button>
                            </div>
                            <!-- /.col -->
                        </div>


                        <a href="#">I forgot my password</a><br>
                        <a href="register.html" class="text-center">Register a new membership</a>
                    </fieldset>
                }
            </div>
            <!-- /.login-box-body -->
        </div>
    </div>
   
   
    <center>
        <div>
             <h6 style="border-top:1px solid #ff3700;"><label>.</label></h6>
            <p>
                <a id="ctl00_hlCompanyFooterLink" href="http://www.YourCompany.com" target="_blank" style="text-decoration:underline;"><b>Your Company</b></a>
                <label><b>123 Unknown Street, Jersey City, NJ 07307</b></label>
            </p>
        </div>

    </center>

    <!-- /.login-box -->
    <!-- jQuery 3.1.1 -->
    <script src="../plugins/jQuery/jquery-3.1.1.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="../bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="../plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
    <script>
      


        function LoginAuthenticate() {
            var errorcount = 0;
            if ($("#Email").val().trim() == "" || $("#Email").val() == null) {
                $("#Email").addClass("ErrorBorder");
                $("#Emailmsg").html("Please enter the UserName");
                errorcount = 1;
            }
            else {
                $("#Email").addClass("");
                $("#Emailmsg").html("");
            }
            if ($("#Password").val().trim() == "" || $("#Password").val() == null) {
                $("#Password").addClass("ErrorBorder");
                $("#Pwdmsg").html("Please enter the Password");
                errorcount = 1;
            }
            else {
                $("#Password").addClass("");
                $("#Pwdmsg").html("");
            }
            if (errorcount == 1) {
                return false;
            }
            return true;
        }


        setTimeout(function () {
            $('#Email').focus();
        }, 1000);
    </script>
</body>
</html>
